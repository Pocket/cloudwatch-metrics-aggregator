{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "es2020"],
		"module": "commonjs",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"outDir": "./"
	},
	"exclude": ["node_modules"],
	"include": [
		"src/index.ts",
		"node_modules/typescript/lib/lib.es2015.iterable.d.ts"
	]
}
